          "team_membership": {
            "type": "object",
            "description": "チームメンバーシップ情報"
          },
          "organization_url_name": {
            "type": "string",
            "description": "組織のURL名",
            "example": "tech-company"
          },
          "slide": {
            "type": "boolean",
            "description": "スライド形式の記事かどうか",
            "example": false
          },
          "summary": {
            "type": "string",
            "description": "記事の要約",
