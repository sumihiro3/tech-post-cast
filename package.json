{
  "name": "tech-post-cast",
  "version": "0.0.1",
  "author": "sumihiro3",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start:api-backend": "yarn workspace @tech-post-cast/api-backend run start:dev",
    "start:backend": "yarn workspace @tech-post-cast/backend run start:dev",
    "start:line-bot": "yarn workspace @tech-post-cast/line-bot run dev",
    "serve:lp-frontend": "yarn workspace @tech-post-cast/lp-frontend run serve",
    "start:lp-frontend": "yarn workspace @tech-post-cast/lp-frontend run dev",
    "start:liff-frontend": "yarn workspace @tech-post-cast/liff-frontend run dev",
    "generate:lp-frontend": "yarn workspace @tech-post-cast/lp-frontend run generate",
    "build-all": "yarn build-commons && yarn build-database && yarn build-backend",
    "build-for-backend": "yarn build-commons && yarn build-database && yarn build-backend",
    "build:for-api-backend": "yarn build-commons && yarn build-database && yarn build:api-backend",
    "build:line-bot": "yarn build-commons && yarn build-database",
    "build-commons": "yarn workspace @tech-post-cast/commons run build",
    "build-database": "yarn workspace @tech-post-cast/database run build",
    "build-backend": "yarn workspace @tech-post-cast/backend run build",
    "build:api-backend": "yarn workspace @tech-post-cast/api-backend run build",
    "build:lp-frontend": "yarn workspace @tech-post-cast/lp-frontend run build",
    "build-infra": "yarn workspace @tech-post-cast/infra run build",
    "diff-infra": "yarn workspace @tech-post-cast/infra run diff:dev",
    "deploy-infra": "yarn workspace @tech-post-cast/infra run deploy:dev",
    "deploy-infra-for-ci:develop": "yarn workspace @tech-post-cast/infra run deploy-for-ci:dev",
    "deploy-infra-for-ci:main": "yarn workspace @tech-post-cast/infra run deploy-for-ci:prod",
    "deploy:line-bot": "yarn workspace @tech-post-cast/line-bot run deploy:dev",
    "login:ecr": "aws --profile tech-post-cast ecr get-login-password --region ap-northeast-1 | docker login --username AWS --password-stdin 788588148195.dkr.ecr.ap-northeast-1.amazonaws.com",
    "login:ecr:for-ci": "aws ecr get-login-password --region ap-northeast-1 | docker login --username AWS --password-stdin 788588148195.dkr.ecr.ap-northeast-1.amazonaws.com",
    "build:backend-image:develop": "docker build -t tech-post-cast-backend-repository-develop:latest --platform linux/amd64 -f ./Dockerfile.backend ./",
    "tag:backend-image:develop": "docker tag tech-post-cast-backend-repository-develop:latest 788588148195.dkr.ecr.ap-northeast-1.amazonaws.com/tech-post-cast-backend-repository-develop:latest",
    "push:backend-image:develop": "docker push 788588148195.dkr.ecr.ap-northeast-1.amazonaws.com/tech-post-cast-backend-repository-develop:latest",
    "update:backend-lambda-code:develop": "aws --profile tech-post-cast lambda update-function-code --function-name TechPostCastBackendLambdaDevelop --image-uri 788588148195.dkr.ecr.ap-northeast-1.amazonaws.com/tech-post-cast-backend-repository-develop:latest",
    "update:backend-lambda-code:for-ci:develop": "aws lambda update-function-code --function-name TechPostCastBackendLambdaDevelop --image-uri 788588148195.dkr.ecr.ap-northeast-1.amazonaws.com/tech-post-cast-backend-repository-develop:latest",
    "build-push:backend-image:develop": "yarn build:backend-image:develop && yarn tag:backend-image:develop && yarn push:backend-image:develop && yarn update:backend-lambda-code:develop",
    "build-push:backend-image:for-ci:develop": "yarn build:backend-image:develop && yarn tag:backend-image:develop && yarn push:backend-image:develop && yarn update:backend-lambda-code:for-ci:develop",
    "build:backend-image:main": "docker build -t tech-post-cast-backend-repository:latest --platform linux/amd64 -f ./Dockerfile.backend ./",
    "tag:backend-image:main": "docker tag tech-post-cast-backend-repository:latest 788588148195.dkr.ecr.ap-northeast-1.amazonaws.com/tech-post-cast-backend-repository:latest",
    "push:backend-image:main": "docker push 788588148195.dkr.ecr.ap-northeast-1.amazonaws.com/tech-post-cast-backend-repository:latest",
    "update:backend-lambda-code:main": "aws --profile tech-post-cast lambda update-function-code --function-name TechPostCastBackendLambda --image-uri 788588148195.dkr.ecr.ap-northeast-1.amazonaws.com/tech-post-cast-backend-repository:latest",
    "update:backend-lambda-code:for-ci:main": "aws lambda update-function-code --function-name TechPostCastBackendLambda --image-uri 788588148195.dkr.ecr.ap-northeast-1.amazonaws.com/tech-post-cast-backend-repository:latest",
    "build-push:backend-image:main": "yarn build:backend-image:main && yarn tag:backend-image:main && yarn push:backend-image:main && yarn update:backend-lambda-code:main",
    "build-push:backend-image:for-ci:main": "yarn build:backend-image:main && yarn tag:backend-image:main && yarn push:backend-image:main && yarn update:backend-lambda-code:for-ci:main",
    "format-prisma": "yarn workspace @tech-post-cast/database run prisma:format",
    "generate-prisma": "yarn workspace @tech-post-cast/database run prisma:generate",
    "create-migration-prisma": "yarn workspace @tech-post-cast/database run prisma:create-migration",
    "deploy-migration-prisma": "yarn workspace @tech-post-cast/database run prisma:deploy-migration",
    "generate:api-spec": "yarn generate:api-spec:backend && yarn generate:api-spec:line-bot",
    "generate:api-spec:backend": "yarn workspace @tech-post-cast/backend generate:api-spec",
    "generate:api-spec:for-frontend": "yarn workspace @tech-post-cast/api-backend generate:api-spec",
    "generate:api-spec:line-bot": "yarn workspace @tech-post-cast/line-bot generate:api-spec",
    "generate:api-client": "openapi-generator-cli generate",
    "test": "yarn test-backend",
    "test-backend": "yarn workspace @tech-post-cast/backend run test",
    "test-commons": "yarn workspace @tech-post-cast/commons run test",
    "test-database": "yarn workspace @tech-post-cast/database run test",
    "test-infra": "yarn workspace @tech-post-cast/infra run test"
  },
  "packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447",
  "dependencies": {
    "@openapitools/openapi-generator-cli": "^2.15.3"
  }
}
